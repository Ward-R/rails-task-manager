<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :details %>
  <%= f.text_field :details, class: 'form-control' %>
  <%= f.submit "Submit", class: 'btn btn-primary mt-3' %>
<% end %>
<%= link_to "Home", tasks_path, class: 'btn btn-primary mx-3' %>
